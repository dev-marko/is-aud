@model List<EShop.Web.Models.Domain.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="row">
        <p>
            <a class="btn btn-outline-success" asp-action="Create">Add New Product</a>
        </p>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
        }

            <div class="col-md-3 m-4">

                <div class="card" style="width: 18rem; height: 30rem;">

                    <img class="card-img-top" src="@item.ProductImage" style="height: 50%;" alt="image for the product">

                    <div class="card-body">

                        <h5 class="card-title">@item.ProductName</h5>

                        <p class="card-text">@item.ProductDescription</p>

                        <p><i>Price: </i><b>$@item.ProductPrice</b></p>

                    </div>

                    <div class="card-footer">
                        <a class="btn btn-success" asp-action="AddProductToCart" asp-controller="Products" asp-route-id="@item.Id">Add To Cart</a>
                        <a class="btn btn-secondary" asp-action="Edit" asp-controller="Products" asp-route-id="@item.Id">Edit</a>
                    </div>

                </div>

            </div>


        if (i % 3 == 2)
        {
            @:</div>
        }
    }
</div>
